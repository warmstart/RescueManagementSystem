<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		tools:context=".fragment.VerificationInProgressFragment">

		<TextView
			android:id="@+id/verificationText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="20sp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:text="@string/verification_in_progress_text" />

		<net.ut11.ccmp.example.view.CountdownView
			android:id="@+id/countdown"
			android:layout_width="160dp"
			android:layout_height="160dp"
			android:layout_below="@id/verificationText"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="30dp"
			android:layout_marginBottom="30dp" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/countdown"
			android:gravity="center"
			android:textSize="20sp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:text="@string/verification_in_progress_wait_text" />
	</RelativeLayout>
</ScrollView>
