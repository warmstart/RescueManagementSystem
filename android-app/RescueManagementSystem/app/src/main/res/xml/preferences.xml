<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<CheckBoxPreference
		android:key="show_popup"
		android:title="@string/preference_popup_title"
		android:summary="@string/preference_popup_summary"
		android:defaultValue="true" />

	<CheckBoxPreference
		android:key="show_popup_if_locked"
		android:title="@string/preference_popup_locked_title"
		android:summary="@string/preference_popup_locked_summary"
		android:defaultValue="false"
		android:dependency="show_popup"
		android:layout="?android:attr/preferenceLayoutChild" />
</PreferenceScreen>